@using CheckersWebsite.Facade
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @Html.Partial("~/Views/Controls/Opponents.cshtml")
    <div class="col-lg-6 board-col match-height-game-control">
        @Html.Partial("~/Views/Controls/CheckersBoard.cshtml", GameController.FromVariant(Variant.AmericanCheckers))
    </div>
    <div class="col-lg-3 move-history match-height-game-control">
        @Html.Partial("~/Views/Controls/MoveControl.cshtml", new List<PdnTurn>())
        <div class="controls">
            <button class="ctrl-button undo" onclick="$undo()">
                <span class="glyphicon glyphicon-undo"></span>
                <span class="sr-only">Undo</span>
            </button>
            <button class="ctrl-button">
                <span class="glyphicon glyphicon-create"></span>
                <span class="sr-only">New Game</span>
            </button>
            <button class="ctrl-button hide">
                <span class="glyphicon glyphicon-abort"></span>
                <span class="sr-only">Resign</span>
            </button>
        </div>
    </div>
</div>

<script>
    $(function() {
        $('.match-height-game-control').matchHeight({ target: $('.board-col')});
    });

    $(function () {
        $('ol.moves').matchHeight({ target: $('.board'), subtractFromTarget: 61 });
    });
</script>